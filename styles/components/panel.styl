.ui.segment.panels {
  margin-top:40px;
  .column {
    .segment {
      overflow:hidden;
      padding: 0 0 20px 0;
      .panel.image{
        max-height:250px;
        .image{
          width:100%;
          max-height:250px;
        }
      }
      .panel.info {
        color: #808080  ;
        padding:5px 15px 0;
        ul.main.info {
          margin:0;
          padding:0;
          line-height:1.8em;
          li {
            font-size:1em;
            list-style:none;
            &:first-child {
              font-size:1.2em;
              font-weight:700;
            }
            span {
              font-weight:600;
            }
          }
        }
        .rating{
          ul {
            margin:0px 0 0 0;
            padding:0;
            line-height:2.3em;
            li{
              display: inline-block;
              color:#F8E71C;
              font-size:1.5em;
            }
            a.ui.button{
              float:right;
              width:120px;
              text-transform:uppercase;
            }
          }
        }
      }
    }
  }
}
